export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Method not allowed" });
  }

  try {
    const {
      clientMessage,
      role,
      verdict,
      keyPointsToClarify
    } = req.body;

    if (!clientMessage || !role || !verdict) {
      return res.status(400).json({
        error: "Missing required fields"
      });
    }

    const prompt = `
You are helping a freelancer draft their FIRST reply to a client.

This reply must be:
- Professional
- Calm and respectful
- Human (not AI-sounding)
- Clear about boundaries
- Free of over-promising

Important rules:
- Do NOT accept the project
- Do NOT negotiate pricing
- Do NOT reveal internal analysis
- Do NOT mention risks or red flags
- Do NOT sound salesy or overly enthusiastic

Tone guidance:
- Executor → neutral, task-focused
- Collaborator → cooperative but bounded
- Decision Maker → confident and structured

Context:

Client message:
${clientMessage}

User role:
${role}

Internal verdict (DO NOT mention):
${verdict}

Key points to clarify:
${keyPointsToClarify?.length
  ? keyPointsToClarify.map(p => `- ${p}`).join("\n")
  : "None explicitly listed"}

TASK:
Write a concise first reply (1–2 short paragraphs) that:
- Acknowledges the message
- Politely asks for clarification where needed
- Suggests a reasonable next step (e.g. clarifying details or a follow-up call)
`;

    const geminiResponse = await fetch(
      `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-latest:generateContent?key=${process.env.GEMINI_API_KEY}`,
      {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          contents: [{ parts: [{ text: prompt }] }]
        })
      }
    );

    const geminiData = await geminiResponse.json();

    console.log("RAW GEMINI RESPONSE:", JSON.stringify(geminiData, null, 2));

    if (!geminiData.candidates?.length) {
      return res.status(500).json({
        error: "No reply generated",
        raw: geminiData
      });
    }

    const replyText = geminiData.candidates[0].content.parts[0].text;

    return res.status(200).json({
      reply: replyText.trim()
    });

  } catch (error) {
    console.error("DRAFT REPLY ERROR:", error);
    return res.status(500).json({
      error: error.message || "Failed to draft reply"
    });
  }
}
